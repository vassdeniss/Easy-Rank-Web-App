@model ICollection<RankPageBasicViewModel>
@{
    ViewData["Title"] = "All Rankings";
}

<div class="text-center row">
    @foreach (RankPageBasicViewModel rank in this.Model)
    {
        <div class="card col-4" style="width: 20rem; margin: 10px">
            @* <img class="card-img-top" style="width: 18rem;" src="@rank." *@
            <div class="card-body">
                <h5 class="card-title mt-1">@rank.RankingTitle</h5>
                <p class="mb-0">Created by: @rank.CreatedByUserName</p>
                <p class="mb-0">Likes: @rank.LikeCount</p>
                <p class="mb-0">Comments: @rank.CommentCount</p>
                <p class="mb-0">Created On: @rank.CreatedOn</p>
            </div>
            
            <form class="input-group-sm" asp-controller="Rank" asp-action="ViewRanking" asp-route-rankId="@rank.Id">
                <input type="submit" value="View Ranking" class="fs-6 btn btn-success mb-3 p-2"/>
            </form>
        </div>
    }
</div>
