@model ICollection<RankPageViewModel>
@{
	this.ViewData["Title"] = "All Rankings";
}

<h3 class="mb-3">@this.ViewData["Title"]</h3>
<div class="row">
	<div class="col-md">
		<table class="table table-hover table-striped table-dark">
			<thead>
				<tr class="table-primary">
					<th scope="col">Id</th>
					<th scope="col">Title</th>
					<th scope="col">Image Alt</th>
					<th scope="col">Created By</th>
					<th scope="col">Created On</th>
					<th scope="col">Likes</th>
					<th scope="col">Comments</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (RankPageViewModel rankPage in this.Model)
				{
					<tr>
						<th scope="row">@rankPage.Id</th>
						<td>@rankPage.RankingTitle</td>
						<td>@rankPage.CreatedByUserName</td>
						<td>@rankPage.ImageAlt</td>
						<td>@rankPage.CreatedOn</td>
						<td>@rankPage.LikeCount</td>
						<td>@rankPage.CommentCount</td>
						<td>
							<a asp-area="" asp-controller="Rank" asp-action="ViewRanking" asp-route-rankId="@rankPage.Id">View</a>
							<span class="text-primary mx-3">|</span>
							<a asp-area=""  asp-controller="Rank" asp-action="Edit" asp-route-rankId="@rankPage.Id">Edit</a>
							<span class="text-primary mx-3">|</span>
							<a asp-area="" asp-controller="Rank" asp-action="Delete" asp-route-rankId="@rankPage.Id">Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}